# Example environment variables for Railway backend deployment
# Copy these to Railway's environment variables section

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-min-50-chars
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=scn-esg-backend.railway.app,your-domain.me
DJANGO_CORS_ALLOWED_ORIGINS=https://scn-esg-platform.vercel.app,https://your-domain.me

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# Redis (for Celery tasks)
REDIS_URL=redis://localhost:6379/0

# AI Integration
GOOGLE_AI_API_KEY=your-gemini-api-key-here

# Email Configuration (optional for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
